@model SignUpViewModel


<div class="row login">
    <div class="col s12 m4 pull-l3 offset-l6 pull-m2 offset-m4 pull-s1 offset-s2">
        <div class="card">
            <div class="card-action indigo-text center-align">
                <h3 class="header">Autopodbor UA</h3>
                <a class="btn-floating halfway-fab waves-effect waves-light" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl"><i class="material-icons">person</i></a>
            </div>
            <div class="card-content">
                <form asp-route="Login" class="col s12">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <fieldset>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary waves-effect" name="button" value="signup">Sign Up</button>
                            <button class="btn btn-default red lighten-2" name="button" value="cancel">Cancel</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .login {
        margin-top: 15%;
    }

    .header {
        font-family: Arial, Helvetica, sans-serif;
    }
</style>